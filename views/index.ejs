<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- <link rel="stylesheet" href="/stylesheets/style.css"> -->
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
  </head>

  <body>
    <!-- <h1>2 + 2 = <%=2+2 %></h1> -->
    <div class="bg-zinc-900 min-h-screen text-white flex flex-col w-full">
      <div class="p-10 w-full flex items-center justify-center">
        <form action="/create" method="post" class="flex flex-col gap-4 w-full">
          <input
            class="bg-zinc-800 w-full px-8 py-3 rounded-md"
            type="text"
            name="title"
            placeholder="title goes here..."
          />
          <textarea
            class="bg-zinc-800 px-8 py-3 rounded-md resize-none"
            name="details"
            placeholder="Write your task details here..."
          ></textarea>
          <input
            type="submit"
            value="Create Task"
            class="bg-blue-600 py-2 w-30 cursor-pointer rounded-md"
          />
        </form>
      </div>
      <div
        class="p-10 w-full flex gap-4 flex-wrap max-sm:items-center max-sm:justify-center"
      >
        <% if(files.length> 0) { %> <% files.forEach((val)=> { %>
        <div
          class="bg-zinc-800 flex flex-col gap-2 min-w-65 max-sm:w-full px-3 py-2 rounded-md"
        >
          <h1 class="text-2xl"><%= val %></h1>
          <div class="flex justify-between mt-2">
          <a class="text-blue-400" href="/files/<%= val %>">Read More</a>
          <a class="text-zinc-500" href="/edit/<%= val%>">Edit</a>
        </div>
        </div>
        <% }) %> <% } else { %>
        <h1 class="text-xl text-zinc-600 pl-1">No Tasks Yet</h1>
        <% } %>
      </div>
    </div>

    <script src="/javascripts/script.js"></script>
  </body>
</html>
